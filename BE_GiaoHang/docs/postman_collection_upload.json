{
   "info": {
      "_postman_id": "c4d6e7f8-9a0b-1c2d-3e4f-5a6b7c8d9e0f",
      "name": "GiaoHangDaNang - Upload API",
      "description": "API cho upload ảnh lên Cloudinary thông qua backend",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
   },
   "item": [
      {
         "name": "1. Đăng nhập",
         "event": [
            {
               "listen": "test",
               "script": {
                  "exec": [
                     "var jsonData = pm.response.json();",
                     "if (jsonData.success && jsonData.data && jsonData.data.accessToken) {",
                     "    pm.environment.set('token', jsonData.data.accessToken);",
                     "}"
                  ],
                  "type": "text/javascript"
               }
            }
         ],
         "request": {
            "method": "POST",
            "header": [
               {
                  "key": "Content-Type",
                  "value": "application/json"
               }
            ],
            "body": {
               "mode": "raw",
               "raw": "{\n  \"phone\": \"0901234567\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
               "raw": "{{baseUrl}}/api/auth/login",
               "host": [
                  "{{baseUrl}}"
               ],
               "path": [
                  "api",
                  "auth",
                  "login"
               ]
            },
            "description": "Đăng nhập để lấy token"
         },
         "response": []
      },
      {
         "name": "2. Upload một ảnh",
         "request": {
            "method": "POST",
            "header": [
               {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
               }
            ],
            "body": {
               "mode": "formdata",
               "formdata": [
                  {
                     "key": "file",
                     "type": "file",
                     "src": []
                  },
                  {
                     "key": "folder",
                     "value": "vehicles",
                     "type": "text"
                  }
               ]
            },
            "url": {
               "raw": "{{baseUrl}}/api/upload/image",
               "host": [
                  "{{baseUrl}}"
               ],
               "path": [
                  "api",
                  "upload",
                  "image"
               ]
            },
            "description": "Upload một ảnh lên Cloudinary thông qua backend"
         },
         "response": []
      },
      {
         "name": "3. Upload nhiều ảnh",
         "request": {
            "method": "POST",
            "header": [
               {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
               }
            ],
            "body": {
               "mode": "formdata",
               "formdata": [
                  {
                     "key": "files",
                     "type": "file",
                     "src": [],
                     "disabled": false
                  },
                  {
                     "key": "files",
                     "type": "file",
                     "src": [],
                     "disabled": false
                  },
                  {
                     "key": "folder",
                     "value": "vehicles",
                     "type": "text"
                  }
               ]
            },
            "url": {
               "raw": "{{baseUrl}}/api/upload/images",
               "host": [
                  "{{baseUrl}}"
               ],
               "path": [
                  "api",
                  "upload",
                  "images"
               ]
            },
            "description": "Upload nhiều ảnh lên Cloudinary thông qua backend"
         },
         "response": []
      }
   ],
   "variable": [
      {
         "key": "baseUrl",
         "value": "http://localhost:5000"
      }
   ]
}